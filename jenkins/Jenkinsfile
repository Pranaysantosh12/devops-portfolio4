pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git credentialsId: 'jenkins-tokenv2', url: 'https://github.com/Pranaysantosh12/devops-portfolio.git'
            }
        }

        stage('Build') {
            steps {
                echo 'No build step needed for static portfolio.'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Static site ready. In real-world, this would be deployed to a server like Nginx.'
            }
        }
    }
}


  
